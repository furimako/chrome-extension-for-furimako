{
    "name": "chrome-extension-for-furimako",
    "version": "1.0",
    "description": "Google Chrome Extension for furimako",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["*://*/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "commands": {
        "open-all-at-once": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "open all links at once for Nikkei and Hacker News websites"
        },
        "toggle-pin": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "toggle pin setting on the current Chrome tab"
        }
    },
    "manifest_version": 3
}
